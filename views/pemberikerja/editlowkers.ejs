<% include ../../public/ui_ux/head %>
<% include ../../public/ui_ux/pemberikerja_nav %>

<div class="container">
  <div class="row">
    <div class="col-md-2"> <!-- Grid 1-->
      <!-- Di Kosongi-->

    </div>
    <div class="col-md-8"> <!-- Grid 2 -->
      <h4> Edit Lowongan Kerja</h4>
      <p> </p>
      <form action="/pemberikerja/update/<%= addlowker._id%>" method="post">
        <div class="form-group"> <label for="">Nama Pekerjaan</label>
          <input type="text" class="form-control"    name="NamaPekerjaan" value=" <%=addlowker.NamaPekerjaan%> ">
        </div>
        <div class="form-group"> <label for="">Jenis Pekerjaan</label>
          <input type="text" class="form-control" " name="JenisPekerjaan" value=" <%=addlowker.JenisPekerjaan%> ">
        </div>
        <div class="form-group"> <label for="">Kemampuan </label>
          <input type="text" class="form-control"   name="Kemampuan"  value=" <%=addlowker.Kemampuan%> ">
        </div>
        <div class="form-group"> <label for=""> LokasiPekerjaan</label>
          <input type="text" class="form-control"  name="LokasiPekerjaan" value=" <%=addlowker.LokasiPekerjaan%> ">
        </div>
        <div class="form-group"> <label for="">Tag </label>
          <input type="text" class="form-control"   name="Tag"  value=" <%=addlowker.Tag%> ">
        </div>

        <div class="form-group"> <label for="">Gaji </label>
          <input type="number" class="form-control"   name="Gaji"  value=" <%=addlowker.Gaji%> ">
        </div>

        <div class="form-group"> <label for="Textarea">Deskrepsi Pekerjaan</label>
           <textarea type="text" class="form-control" id="DeskrepsiPekerjaan" rows="3" placeholder="<%=addlowker.DeskrepsiPekerjaan%>" name="DeskrepsiPekerjaan" value=" <%=addlowker.DeskrepsiPekerjaan%> "></textarea>
        </div>

          <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
    <div class="col-md-2"> <!-- Grid 3-->
      <!-- Di Kosongi-->
    </div>
  </div>
</div>
