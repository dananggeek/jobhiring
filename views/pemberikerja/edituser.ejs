  <div class="row">
    <div class="col-md-2"> <!-- Grid 1-->
      <!-- Di Kosongi-->

    </div>
    <div class="col-md-8"> <!-- Grid 2 -->
      <h4> Edit Lowongan Kerja</h4>
      <p> </p>
      <form action="/pemberikerja/updateuser/<%= user._id%>" method="post">
        <div class="form-group"> <label for="">username</label>
          <input type="text" class="form-control"    name="username" value=" <%=user.login.username%> ">
        </div>
        <div class="form-group"> <label for="">perusahaan</label>
          <input type="text" class="form-control" " name="JenisPekerjaan" value=" <%=user.pemberikerja.perusahaan%> ">
        </div>
        <div class="form-group"> <label for="">alamat </label>
          <input type="text" class="form-control"   name="alamat"  value=" <%=user.pemberikerja.alamat%> ">
        </div>
        <div class="form-group"> <label for=""> email</label>
          <input type="email" class="form-control"  name="email" value=" <%=user.login.email%> ">
        </div>

        <div class="form-group"> <label for="">notelepon </label>
          <input type="numb" class="form-control"   name="notelepon"  value=" <%=user.pemberikerja.notelepon%> ">
        </div>

        <div class="form-group"> <label for="Textarea">deskrepsi</label>
           <textarea class="form-control" id="Textarea" rows="3" placeholder="Type here" name="deskrepsi" value=" <%=user.pemberikerja.deskrepsi%> "></textarea>
        </div>

          <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
